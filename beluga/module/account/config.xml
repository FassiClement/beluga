<!-- List of account module triggers and routes -->
<trigger name="beluga_account_login">
	<route class="beluga.module.account.AccountImpl" method="login" access="static">
	</route>
</trigger>

<trigger name="beluga_account_subscribe">
	<route class="beluga.module.account.AccountImpl" method="subscribe" access="static">
	</route>
</trigger>

<template name="login" path="${beluga.installPath}/module/account/view/tpl/login.mtt" />
<template name="subscribe" path="${beluga.installPath}/module/account/view/tpl/subscribe.mtt" />
